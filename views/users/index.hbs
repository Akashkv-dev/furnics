          type: 'GET',
          url: `/users/addtocart/${productId}`,
          success: function (response) {
            console.log(response)
            // Update cart badge dynamically
            $('#cart-badge').text(response.cartcount);
          },
          error: function (err) {
            console.error('Error adding to cart:', err);
          }
        });
      }
    });
  }
</script>


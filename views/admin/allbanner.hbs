{{> adminheader}}
<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each banner}}
            <tr>
                <td>
                    <img src="uploads/{{this.bannerImage}}" style="width: 70px; height: 60px;" />
                </td>
                <td>{{this.bannerTitle}}</td>
                <td>{{this.bannerDescription}}</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            More
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/admin/edit_banner/{{this._id}}">Edit</a>
                            <a class="dropdown-item" href="/admin/delete_banner/{{this._id}}"
                                onclick="return confirm('Are you sure you want to delete this banner?')">
                                <i class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
